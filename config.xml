
<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/3.0"
        id="com.neologix.nesto"
        versionCode="10" 
        version   = "1.0.0">

    <!-- versionCode is optional and Android only -->

    <name>NESTO</name>
    <description>
        NESTO
    </description>
    <author email="support@phonegap.com" href="http://phonegap.com">
       NESTO
    </author>
        
	 <!-- Internet connection -->
	<feature name="NetworkStatus">
    <param name="android-package" value="org.apache.cordova.NetworkManager" />
	</feature>
	
	<feature name="Network Status">
    <param name="blackberry-package" value="org.apache.cordova.network.Network" />
	</feature>
	
	<feature name="NetworkStatus">
    <param name="ios-package" value="CDVConnection" />
	</feature>
	
	<Capabilities>
    <Capability Name="ID_CAP_NETWORKING" />
	</Capabilities>
	
	
	
	
	<!-- Splash screen Android-->
	<gap:splash src="images/426X320.png" gap:platform="android" gap:density="ldpi" />
	<gap:splash src="images/470X320.png" gap:platform="android" gap:density="mdpi" />
	<gap:splash src="images/640X480.png" gap:platform="android" gap:density="hdpi" />
	<gap:splash src="images/960X720.png" gap:platform="android" gap:density="xhdpi" />

        <!-- iPhone and iPod touch -->
        <gap:splash src="images/320X480.png" gap:platform="ios" width="320" height="480" />
        <gap:splash  src="images/640X960.png" gap:platform="ios" width="640" height="960" />

        <!-- iPhone 5 / iPod Touch (5th Generation) -->
        <gap:splash  src="images/640X1136.png" gap:platform="ios" width="640" height="1136" />
        
	
	 <!-- icon screen ios--><!-- iPhone / iPod Touch  -->
    <icon src="images/AppIcon60x60.png" gap:platform="ios" width="60" height="60" />
    <icon src="images/AppIcon60x60@2x.png" gap:platform="ios" width="120" height="120" />
        
    <!-- Settings Icon -->
    <icon src="images/AppIcon29x29.png" gap:platform="ios" width="29" height="29" />
    <icon src="images/AppIcon29x29@2x.png" gap:platform="ios" width="58" height="58" />

    <!-- Spotlight Icon -->
    <icon src="images/AppIcon40x40.png" gap:platform="ios" width="40" height="40" />
    <icon src="images/AppIcon40x40@2x.png" gap:platform="ios" width="80" height="80" />
	
	<!-- icon screen Android-->
	<icon  src="icon.png" gap:platform="android" gap:density="xhdpi" />
	
	
	
	
	
	</widget>
