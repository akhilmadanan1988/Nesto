
<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id="com.neologix.nesto"
        versionCode="10" 
        version   = "1.0.0">

    <!-- versionCode is optional and Android only -->

        <preference name="phonegap-version" value="3.1.0" />
        <preference name="orientation" value="landscape" />
        <preference name="fullscreen" value="true" /> 
        
    <name>NESTO</name>
    <description>
        NESTO
    </description>
    <author email="support@phonegap.com" href="http://phonegap.com">
       NESTO
    </author>
        
	
       
	
	
	 <!-- Splash screen ios-->
	<gap:splash src="images/splash/ios/splash.png" gap:platform="ios" width="2048" height="1496" />
	<gap:splash src="images/splash/ios/splash.png" gap:platform="ios" width="1536" height="2008" />
	
	<!-- Splash screen Android-->
	<gap:splash src="images/splash/Android/drawable-xhdpi/splash.png" gap:platform="android" gap:density="ldpi" />
	<gap:splash src="images/splash/Android/drawable-mdpi/splash.png" gap:platform="android" gap:density="mdpi" />
	<gap:splash src="images/splash/Android/drawable-hdpi/splash.png" gap:platform="android" gap:density="hdpi" />
	<gap:splash src="images/splash/Android/drawable-xhdpi/splash.png" gap:platform="android" gap:density="xhdpi" />
	
	
	 <!-- icon screen ios-->
	<icon src="images/icon1.png" gap:platform="ios" width="114" height="114" />
	
	<!-- icon screen Android-->
	<icon src="images/icon1.png" gap:platform="android" gap:density="xhdpi" />
	
	
	
	
	
	</widget>
